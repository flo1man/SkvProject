@using SkvProject.Web.ViewModels;
@model PagingViewModel

<nav aria-label="...">
    <ul class="pagination justify-content-center">
        <li class="page-item @if (!Model.HasPreviousPage) { <text>disabled</text> }">
            <a class="page-link" asp-controller="Forum" asp-action="ByName" asp-route-pageNumber="@Model.FirstPageNumber"><strong>First</strong></a>
        </li>
        <li class="page-item @if (!Model.HasPreviousPage) { <text>disabled</text> }">
            <a class="page-link" asp-controller="Forum" asp-action="ByName" asp-route-pageNumber="@Model.PreviousPageNumber"><strong>Previous</strong></a>
        </li>
        @for (int i = Model.PageNumber - 2; i < Model.PageNumber; i++)
        {
            if (i > 0)
            {
                <li class="page-item"><a class="page-link" asp-controller="Forum" asp-action="ByName" asp-route-pageNumber="@i">@i</a></li>
            }

        }
        <li class="page-item active" aria-current="page">
            <span class="page-link">
                @Model.PageNumber
                <span class="sr-only">(current)</span>
            </span>
        </li>
        @for (int i = Model.PageNumber + 1; i <= Model.PageNumber + 2; i++)
        {
            if (i <= Model.PagesCount)
            {
                <li class="page-item"><a class="page-link" asp-controller="Forum" asp-action="ByName" asp-route-pageNumber="@i">@i</a></li>
            }

        }
        <li class="page-item @if (!Model.HasNextPage) { <text>disabled</text> }">
            <a class="page-link" asp-controller="Forum" asp-action="ByName" asp-route-pageNumber="@Model.NextPageNumber"><strong>Next</strong></a>
        </li>
        <li class="page-item @if (!Model.HasNextPage) { <text>disabled</text> }">
            <a class="page-link" asp-controller="Forum" asp-action="ByName" asp-route-pageNumber="@Model.LastPageNumber"><strong>Last</strong></a>
        </li>
    </ul>
</nav>