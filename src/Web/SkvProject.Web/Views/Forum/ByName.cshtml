@using SkvProject.Web.ViewModels.Posts
@model CategoryViewModel
@{
    var count = 1;
}
<h1>About the @Model.Name category</h1>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Title</th>
            <th scope="col">Content</th>
            <th scope="col">AuthorId</th>
            <th scope="col">CreatedOn</th>
        </tr>
    </thead>
    @foreach (var post in Model.Posts)
    {

        <tbody>
            <tr>
                <td>@count</td>
                <td>@post.Title</td>
                <td>@post.Content</td>
                <td>@post.AuthorId</td>
                <td>@post.CreatedOn.ToString("F")</td>
            </tr>
        </tbody>
        count++;
    }
</table>
